@model IEnumerable<Project_TestTechnique.Models.Candidat>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Candidats</h1>

<form asp-controller="Candidat" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScooleLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastJob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CandidatCv)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScooleLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastJob)
            </td>
            <td>
                <a href="~/upload/@item.CandidatCv" target="_blank"><i class="bi bi-file-pdf"></i>ouvrir le CV</a>
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id=item.CandidatId},
               new { onclick = "return confirm('Êtes-vous sûr de Supprimé....?')" })
            </td>
        </tr>
}
    </tbody>
</table>
